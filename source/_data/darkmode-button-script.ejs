<script>
    const updateDarkmodeButtonLabel = () => {
        if (volantis.dark.mode == "dark") {
            document.querySelectorAll('.toggle-mode-btn').forEach((ctx) => {
                ctx.innerHTML = "<i class=\"fas fa-sun fa-fw\"></i>浅色模式";
            });
        } else {
            document.querySelectorAll('.toggle-mode-btn').forEach((ctx) => {
                ctx.innerHTML = "<i class=\"fas fa-moon fa-fw\"></i>深色模式";
            });
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        updateDarkmodeButtonLabel();
        volantis.dark.push(() => {
            updateDarkmodeButtonLabel();
        })
    }, { once: true });
</script>